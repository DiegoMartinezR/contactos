<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="llamar1">

            <FrameLayout
                android:id="@+id/label1"
                android:layout_width="9dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:background="@color/colorPrimaryDark">

            </FrameLayout>

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@+id/label1"
                android:src="@drawable/descarga"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/ca1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/profile_image"
                android:text="Emma Charlotte  Watson"
                android:textColor="@color/black"
                android:textSize="17dp"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/ca2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ca1"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/profile_image"
                android:text="Actriz, Modelo, FilÃ¡ntropa" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="llamar2">

            <FrameLayout
                android:id="@+id/label2"
                android:layout_width="9dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:layout_marginEnd="8dp">

            </FrameLayout>

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image2"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/label2"
                android:layout_marginEnd="20dp"
                android:src="@drawable/images"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/ca3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/profile_image2"
                android:text="Elon Reeve Musk"
                android:textSize="17dp"
                android:textColor="@color/black"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/ca4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ca3"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/profile_image2"
                android:text="Fisico, Empresario" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="llamar3">

            <FrameLayout
                android:id="@+id/label3"
                android:layout_width="9dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:layout_marginEnd="8dp">

            </FrameLayout>

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image3"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/label3"
                android:layout_marginEnd="20dp"
                android:src="@drawable/steve"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/ca5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/profile_image3"
                android:text="Steven Paul Jobs"
                android:textSize="17dp"
                android:textColor="@color/black"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/ca6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ca5"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/profile_image3"
                android:text="Empresario" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
</ScrollView>